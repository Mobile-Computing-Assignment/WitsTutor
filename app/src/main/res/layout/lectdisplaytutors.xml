<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context="com.example.witstutor.LectDisplayTutors">

    <ListView
        android:id="@+id/displayTutorsLV"
        android:layout_width="395dp"
        android:layout_height="441dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/assignHTBtn"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/btn_bg"
        android:text="Assign Head Tutor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayTutorsLV"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/headTutorTV"
        android:layout_width="213dp"
        android:layout_height="47dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/et_bg"
        android:padding="10dp"
        android:text="HEAD TUTOR"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/assignHTBtn"
        app:layout_constraintTop_toBottomOf="@+id/displayTutorsLV"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="96dp"
        android:layout_height="47dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="158dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="16dp"
        android:text="TUTORS"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintBottom_toTopOf="@+id/displayTutorsLV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="158dp"
        android:layout_marginLeft="157dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
